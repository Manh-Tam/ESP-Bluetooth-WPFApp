<Window x:Class="BluetoothApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BluetoothApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Name="btnConnect" Content="Connect to ESP32" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Height="50" Margin="10" Click="btnConnect_Click"/>
        <TextBox Name="txtOutput" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,70,10,10" Width="500" Height="200" TextWrapping="Wrap" AcceptsReturn="True"/>
    </Grid>
</Window>
